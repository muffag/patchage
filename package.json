{
  "name": "patchage",
  "version": "0.0.1",
  "description": "Easily install packages with opinionated configuration",
  "author": "Muff Kirchturmtechnik AG",
  "license": "ISC",
  "main": "dest/main.js",
  "bin": {
    "patchage": "./bin/patchage"
  },
  "scripts": {
    "test": "jest",
    "build": "rm -rf dest && tsc",
    "start:dev": "nodemon",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,html,md,gql,graphql,yml,css,less,scss}\"",
    "check-patches": "find patches -name \"package.json\" | xargs -I % ncu --packageFile %",
    "check-patches:upgrade": "find patches -name \"package.json\" | xargs -I % ncu --packageFile % -u",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage && open coverage/lcov-report/index.html"
  },
  "dependencies": {
    "colors": "^1.3.3",
    "fs-extra": "^8.0.1",
    "inquirer": "^6.3.1",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/fs-extra": "^7.0.0",
    "@types/inquirer": "^6.0.3",
    "@types/jest": "^24.0.13",
    "@types/lodash": "^4.14.132",
    "@types/node": "^12.0.3",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c tslint.json --fix",
      "prettier --write",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
